<div class="index">

  <h1>MEMBERS</h1>
  <button class="new-button" type="button" onclick="location.href='/members/new'">ADD A NEW MEMBER</button>

  <form class="form-search" action="/members" method="get">
    <input type="text" name="name_query" value="">
    <input type="submit" value="Search">
  </form>
  <form class="form-clear" action="/members" method="get">
    <input type="submit" value="Clear Results">
  </form>

  <br>
  <div class="workout-container">
    <!-- This container needs to display all the informtation of the member and allow the user to navigate through the app to manipulate the relevant data. This will be done using RESTful routes. -->

    <!-- for each member in the members models
      print out members first_name
      print our members last_name
      print out members date of birth
      print our members goal
    end -->

    <!-- Get each member from the database for the  -->
    <% @members.each do |member| %>
      <div class="index-table">
        <!-- Print out every members first name and last, date of birth and their goal -->
        <p><b>Name: <a href="/members/<%= member.id %>"><%=  member.first_name %> <%= member.last_name %></a></b></p>
        <p><b>DOB:</b> <%= member.dob %></p>
        <p><b>Goal:</b> <%= member.goal %></p>

      <!-- Create seperate buttons for the relevant RESTful routes -->
      <div class="index-buttons">
        <button class="index-button-members1" type="button" onclick="location.href='/members/<%= member.id %>/workouts'">WORKOUTS BOOKED</button>
        <button class="index-button-members2" type="button" onclick="location.href='/members/<%= member.id %>/edit'">EDIT</button>
        <button class="index-button-members2" type="button" onclick="location.href='/bookings/new/<%= member.id %>'">MAKE A BOOKING</button>
        <button class="index-button-members4" type="button" onclick="location.href='/members/<%= member.id %>/delete'">DELETE</button>
      </div>
      </div>
    <% end %>
  </div>

</div>
